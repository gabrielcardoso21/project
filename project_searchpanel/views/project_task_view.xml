<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_task_kanban" model="ir.ui.view">
            <field name="name">project.task.kanban in project_searchpanel</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//templates" position="after">
                    <searchpanel>
                        <field name="type_id" select="multi"/>
                    </searchpanel>
                </xpath>
            </field>
        </record>
        <record id="quick_create_task_form" model="ir.ui.view">
            <field name="name">project.task.form.quick_create</field>
            <field name="model">project.task</field>
            <field name="priority">9000</field>
            <field name="inherit_id" ref="project.quick_create_task_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="type_id"/>
                    <field name="parent_id"/>
                    <field name="date_deadline"/>
                    <field name="description" widget="text"/>
                </field>
            </field>
        </record>
        <record id="view_task_search_form" model="ir.ui.view">
            <field name="name">project.task.search.form</field>
            <field name="model">project.task</field>
            <field name="priority">9000</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <filter name="project" position="after">
                    <filter string="Tarefa pai" name="parent" context="{'group_by': 'parent_id'}"/>
                </filter>
            </field>
        </record>

    </data>
</odoo>
